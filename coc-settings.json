{
    "python.jediEnabled": false,
    "python.condaPath": "~/anaconda3/bin/conda",
    "python.pythonPath": "~/anaconda3/bin/python",
    "languageserver": {
        "ccls": {
            "command": "~/APP/ccls/Release/ccls",
            "filetypes": [
                "c",
                "cpp",
                "objc",
                "objcpp"
            ],
            "rootPatterns": [
                ".ccls",
                "compile_commands.json",
                ".vim/",
                ".git/",
                ".hg/"
            ],
            "initializationOptions": {
                "cache": {
                    "directory": "/tmp/ccls"
                }
            }
        }
    }
}
